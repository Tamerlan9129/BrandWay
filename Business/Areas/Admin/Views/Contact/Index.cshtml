@using Business.Areas.Admin.ViewModels.Contact;
@model ContactIndexVM;

<div class="right_col" role="main">
    <div class="">
        <div class="row">
            @if (Model != null)
            {
                <div class="col-md-12 col-sm-12 mt-4 ">
                    <div class="x_panel">
                        <div class="x_content">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-box table-responsive">
                                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Address</th>
                                                    <th>Phone Number</th>
                                                    <th>Email Address</th>
                                                    <th>Careers</th>
                                                    <th>Monday To Saturday</th>
                                                    <th>Sundays</th>
                                                    <th>Action</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    <tr>
                                                        <td>@Model.Id</td>
                                                        <td>@Model.Address</td>
                                                        <td>@Model.PhoneNumber</td>

                                                        <td>@Model.EmailAddress</td>
                                                        <td>@Model.Careers</td>
                                                        <td>@Model.MondayToSaturday</td>
                                                        <td>@Model.Sundays</td>
                                                        <td>
                                                            <form asp-action="delete" asp-controller="contact" asp-route-id="@Model.Id">
                                                                <a class="btn btn-sm btn-warning" asp-action="update" asp-controller="contact" asp-route-id="@Model.Id">
                                                                    Update
                                                                </a>
                                                                <button class="btn btn-sm btn-danger">
                                                                    Delete
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <a asp-action="create" asp-controller="contact" class="btn btn-success">Create</a>
            }

        </div>
    </div>
</div>