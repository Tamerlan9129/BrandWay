@using Business.Areas.Admin.ViewModels.HomeMainSlider;
@model HomeMainSliderUpdateVM;

<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_content">
                        <form enctype="multipart/form-data" asp-action="update" asp-controller="homemainslider" asp-area="admin" method="post">
                            <div class="form-group">
                                <label asp-for="@Model.Title" class="col-form-label"></label>
                                <input asp-for="@Model.Title" class="form-control">
                                <span style="color:red !important" asp-validation-for="@Model.Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ButtonLink" class="col-form-label"></label>
                                <input asp-for="@Model.ButtonLink" class="form-control">
                                <span style="color:red !important" asp-validation-for="@Model.ButtonLink"></span>
                            </div>
                            <div class="custom-file mb-3">
                                <input asp-for="@Model.Photo" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile" asp-for="@Model.Photo"></label>
                                <span style="color:red !important" asp-validation-for="@Model.Photo"></span>
                            </div>

                            <button class="btn btn-sm btn-outline-success" type="submit">Submit</button>
                            <a asp-action="index" asp-controller="homemainslider" asp-area="admin" class="btn btn-sm btn-light text-dark">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
        }