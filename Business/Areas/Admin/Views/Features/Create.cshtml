@using Business.Areas.Admin.ViewModels.Features;
@model FeaturesCreateVM;

<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_content">
                        <form enctype="multipart/form-data" asp-action="create" asp-controller="features" asp-area="admin" method="post">
                            <div class="form-group">
                                <label asp-for="@Model.Title" class="col-form-label"></label>
                                <input asp-for="@Model.Title" class="form-control">
                                <span style="color:red !important" asp-validation-for="@Model.Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description" class="col-form-label"></label>
                                <textarea asp-for="@Model.Description" class="form-control"></textarea>
                                <span style="color:red !important" asp-validation-for="@Model.Description"></span>
                            </div>

                            <div class="custom-file mb-3">
                                <input asp-for="@Model.Photo" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile" asp-for="@Model.Photo"></label>
                                <span style="color:red !important" asp-validation-for="@Model.Photo"></span>
                            </div>

                            <button class="btn btn-sm btn-outline-success" type="submit">Submit</button>
                            <a asp-action="index" asp-controller="features" asp-area="admin" class="btn btn-sm btn-light text-dark">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
        }